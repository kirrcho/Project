@page "/search"
@model SearchModel
@{
}

<div class="container-fluid">
    <form asp-page="/search" class="form-inline mt-2 mt-md-0" method="post">
        <input class="form-control mr-sm-2 offset-8" type="text" placeholder="Search" aria-label="Search" name="searchterm" value="@this.Model.SearchTerm">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Advanced Search</button>
        <hr style="width:100%" />
        @Html.DisplayFor(p => p.Categories, "CheckBoxCategoryDisplayTemplate")
    </form>
</div>

<partial name="BorderedSectionPartial" />

@Html.DisplayFor(p => p.SearchResults, "SearchResultDisplayTemplate")