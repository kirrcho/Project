@model IEnumerable<UserViewModel>

<div class="container-fluid col-12">
    @foreach (var user in this.Model)
    {
        <div class="card d-inline-block" style="width:16%">
            <a href="/account/profile/@user.Username">
                <img id="img" class="card-img-top img-thumbnail" itemprop="image" style="height:200px" src="@user.Avatar" alt="@user.Username's profile picture">
            </a>
            <a href="/account/profile/@user.Username">
                <div class="card-body justify-content-center text-center" style="display:flex">
                    <p style="height:20px">@user.Username</p>
                </div>
            </a>
        </div>
    }
</div>