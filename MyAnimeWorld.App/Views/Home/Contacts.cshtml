@model ComplaintBindingModel

<link href="~/css/Contacts.css" rel="stylesheet" />

<div class="jumbotron jumbotron-sm">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-lg-12">
                <h1 class="h1">
                    Contacts <small>Feel free to contact us</small>
                </h1>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="well well-sm">
                <form asp-controller="Home" asp-action="Contacts" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="name">
                                    <b>Name</b>
                                </label>
                                <br />
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <input type="text" class="form-control" asp-for="Name" placeholder="Enter name" required="required" />
                            </div>
                            <div class="form-group">
                                <label for="email">
                                    <b>Email Address</b>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-envelope"></span>
                                    </span>
                                    <br />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <input type="email" class="form-control" asp-for="Email" placeholder="Enter email" required="required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="subject">
                                    <b>Subject</b>
                                </label>
                                <br />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                                <select asp-for="Subject" class="form-control" required="required">
                                    <option name="subject" value="na" selected="">Choose One:</option>
                                    <option name="subject" value="Questions">Question</option>
                                    <option name="subject" value="Reports">Complaint</option>
                                    <option name="subject" value="Suggestions">Suggestion</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="name">
                                    <b>Message</b>
                                </label>
                                <br />
                                <span asp-validation-for="Message" class="text-danger"></span>
                                <textarea asp-for="Message" class="form-control" rows="9" cols="25" required="required"
                                          placeholder="Message"></textarea>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary pull-right">
                                Send Message
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-4">
            <span class="glyphicon glyphicon-globe"></span>Our office
            <address>
                <strong>MyAnimeWorld, Inc.</strong><br>
                Bulgaria, Plovdiv<br>
                <p>Phone: +3598766666</p>
            </address>
            <address>
                <strong>Email</strong><br>
                kirrcho6@gmail.com
            </address>
        </div>
    </div>
</div>