@model PagesViewModel

<ul class="pagination">
    <li class="page-item">
        <a class="page-link" href="@(this.Model.PageUrl + (this.Model.CurrentPage - 1))" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>

    @foreach (var page in this.Model.Pages.OrderBy(p => p))
    {
        //Active page
        if (page == this.Model.CurrentPage)
        {
            <li class="page-item" style="width:40px">
                <a class="page-link" style="color:black" href="@(this.Model.PageUrl + page)">
                    @(page)
                </a>
            </li>
        }
        else
        {
            <li class="page-item" style="width:40px">
                <a class="page-link" href="@(this.Model.PageUrl + page)">
                    @(page)
            </a>
        </li>
    }
}

