@model IEnumerable<AnimeViewModel>

<div class="container-fluid col-12">
    @foreach (var anime in this.Model)
    {
        <div class="card d-inline-block" style="width:24%">
            <a href="/animes/watch/@anime.EpisodeId">
                <img class="card-img-top img-thumbnail" itemprop="image" style="height:300px" src="@anime.ImageUrl" alt="Card image cap">
            </a>
            <a href="/animes/watch/@anime.EpisodeId">
                <div class="card-body justify-content-center text-center" style="display:flex">
                    <p style="height:80px">@(anime.Title) Episode @(anime.EpisodeNumber)</p>
                </div>
            </a>
        </div>
    }
</div>